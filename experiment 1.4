<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Advanced Character Counter</title>
  <style>
    :root {
      --primary: #4e91ff;
      --danger: #ff4e4e;
      --warning: #ffa500;
      --bg-light: #f7f9fc;
      --text-dark: #333;
      --card-light: #ffffff;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background: var(--bg-light);
    }

    .container {
      width: 400px;
      background: var(--card-light);
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    textarea {
      width: 100%;
      height: 140px;
      padding: 14px;
      font-size: 16px;
      border-radius: 10px;
      border: 1.5px solid #ccc;
      resize: none;
      transition: border-color 0.3s ease;
      background: #fdfdfd;
    }

    textarea:focus {
      border-color: var(--primary);
      outline: none;
    }

    .counter {
      margin-top: 14px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 15px;
    }

    .char-count {
      color: var(--text-dark);
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .char-count.warning {
      color: var(--warning);
    }

    .char-count.danger {
      color: var(--danger);
    }

    .progress-bar {
      width: 100%;
      height: 8px;
      background: #e0e0e0;
      border-radius: 4px;
      overflow: hidden;
      margin-top: 10px;
    }

    .progress {
      height: 100%;
      width: 0%;
      background: var(--primary);
      transition: width 0.3s ease;
    }

    .progress.warning {
      background: var(--warning);
    }

    .progress.danger {
      background: var(--danger);
    }
  </style>
</head>
<body>
  <div class="container">
    <textarea id="text-input" maxlength="200" placeholder="Type something... (max 200 characters)"></textarea>
    <div class="counter">
      <span class="char-count" id="char-count">0 / 200</span>
    </div>
    <div class="progress-bar">
      <div class="progress" id="progress"></div>
    </div>
  </div>

  <script>
    const textarea = document.getElementById('text-input');
    const counter = document.getElementById('char-count');
    const progress = document.getElementById('progress');
    const maxLength = textarea.maxLength;

    textarea.addEventListener('input', () => {
      const len = textarea.value.length;
      const percent = (len / maxLength) * 100;

      counter.textContent = `${len} / ${maxLength}`;
      progress.style.width = `${percent}%`;

      counter.classList.remove('warning', 'danger');
      progress.classList.remove('warning', 'danger');

      if (len > maxLength * 0.9) {
        counter.classList.add('danger');
        progress.classList.add('danger');
      } else if (len > maxLength * 0.7) {
        counter.classList.add('warning');
        progress.classList.add('warning');
      }
    });
  </script>
</body>
</html>
